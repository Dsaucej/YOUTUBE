{%- if componentData %}
<figure id="{{componentName}}" class="about-card card-{{componentData.direction}}">
    <div class="content">
        <h2>{{componentData.heading}}</h2>
        <div>{{componentContent | safe}}</div>
        {%- if componentData.link -%}
        <div class="learn-more flex-end flex-push" ><a href="{{helpers.componentLink(componentData.link)}}">{{componentData.link.text}}</a></div>
        {%- endif -%}
    </div>
    {%- if componentData.image -%}{%- Image componentData.image.src, componentData.image.alt -%}{%- endif -%}
</figure>
{%- endif %}