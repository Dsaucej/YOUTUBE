{% if hero %}
    {% set image = hero.image or {src: "images/hero.jpg", "alt": "CG Guitars' Charlie playing guitar on stage"} %}
    {% set callToAction = hero.callToAction %}
    <div class="hero{% if hero.size %} hero-{{hero.size}}{% endif %}">
        <div class="hero-text">
            <h1>{{hero.title}}</h1>
            {% if hero.subtitle %}
                <p class="subtitle">{{hero.subtitle}}</p>
            {%endif %}
            {% if callToAction %}
                <div class="call-to-action">
                {% for item in callToAction %}
                    {%- set type = item.type or "primary" %}
                    {%- set btnClass = item.class or "" %}
                    {%- if type === "js" %}
                        <div {{item.attribute}} class="action-button cta-primary{{btnClass}}"></div>
                    {% else %}
                    <a {{item.attribute}} class="action-button cta-{{type}} {{btnClass}}" href="{{item.link}}">{{item.text}}</a>
                    {%- endif -%}
                {% endfor %}
                </div>
            {% endif %}
            {% if hero.description %}
                <p class="description">{{hero.description | safe}}</p>
            {% endif %}
        </div>
        {%- Image image.src, image.alt -%}
        <div class="hero-scroll-down">
            <a aria-label="Scroll to learn more" href="#main-content">
                {% include 'img/chevron_down.svg' %}
            </a>
        </div>
    </div>
{% endif %}
